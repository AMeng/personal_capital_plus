{
  "manifest_version": 3,
  "name": "Personal Capital Plus",
  "short_name": "PC Plus",
  "description": "Customize Personal Capital",
  "version": "2.3",
  "options_page": "options.html",
  "content_scripts": [{
    "matches": ["*://home.personalcapital.com/*"],
    "js": ["main.js"]
  }],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["options.html"],
  "permissions": ["storage", "activeTab", "webNavigation", "webRequest", "webRequestBlocking"],
  "host_permissions": ["*://*.personalcapital.com/*"]
}
